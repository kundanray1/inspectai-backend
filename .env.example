# Sitewise Backend Environment Variables
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# MongoDB (use MongoDB Atlas for production)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/sitewise?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# Email (SMTP / AhaSend Configuration)
# SMTP_HOST=smtp.sendgrid.net
SMTP_HOST=send.ahasend.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@sitewise.app
EMAIL_PROVIDER=auto
AHASEND_API_KEY=your-ahasend-api-key
AHASEND_ACCOUNT_ID=your-ahasend-account-id
AHASEND_BASE_URL=https://api.ahasend.com/v2

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://sitewise.pages.dev

# Super Admin (seeded on first run)
# SUPER_ADMIN_EMAIL=raykundan57@gmail.com
# SUPER_ADMIN_PASSWORD=Premisha@9845
SUPER_ADMIN_NAME=Kundan Ray

# Stripe Billing
STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_PRICE_STARTER=price_1Sh2EoGT9X5LNvXq1SIGhKBL
# STRIPE_PRICE_PRO=price_1Sh2H0GT9X5LNvXqR6OQeKdC
# STRIPE_BILLING_RETURN_URL=https://sitewise.pages.dev/app/billing
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Redis (for BullMQ job queue)
# REDIS_URL=redis://default:password@redis-host:6379

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_VISION_MODEL=gemini-2.5-flash
GEMINI_RATE_LIMIT_RPM=15
GEMINI_TIMEOUT_MS=60000
GEMINI_MAX_RETRIES=3

# Cloudflare R2 Storage
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=sitewise
STORAGE_PROVIDER=r2

# PDF Rendering (optional)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Job Queue Configuration
INSPECTION_QUEUE_NAME=sitewise.inspection.analysis
INSPECTION_QUEUE_MAX_PENDING=500
INSPECTION_WORKER_CONCURRENCY=2
